@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Shop_app.Models.Role
@{
    Layout = "_Layout";
    ViewData["Title"] = "Assign Role";
}
<div class="row">
    <div class="col-4">
        <h3>Create Role</h3>
    </div>
    <div class="col-4">
        <form class="border p-3"
              asp-controller="User"
              asp-action="AssignRole"
              method="post">
            <label asp-for="UserId" class="form-label">UserId:</label>
            <input type="text" class="form-control" name="UserId" required />
            <label asp-for="RoleId" class="form-label">RoleId:</label>
            <input type="text" class="form-control" name="RoleId" required />
            <label asp-for="RoleName" class="form-label">RoleName:</label>
            <input type="text" class="form-control" name="RoleName" required />
            <button type="submit" class="btn btn-success m-3">AssignRole</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>