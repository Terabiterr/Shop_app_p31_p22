@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Shop_app.Models.Role
@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Role";
}
<div class="row">
    <div class="col-4">
        <h3>Create Role</h3>
    </div>
    <div class="col-4">
        <form class="border p-3"
              asp-controller="User"
              asp-action="CreateRole"
              method="post">
            <label asp-for="RoleName" class="form-label">Name:</label>
            <input type="text" class="form-control" name="RoleName" required />
            <button type="submit" class="btn btn-success m-3">CreateRole</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>